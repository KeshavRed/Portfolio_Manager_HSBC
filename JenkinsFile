pipeline {
    agent any


    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/KeshavRed/Portfolio_Manager_HSBC.git', branch: 'master'
            }
        }

        stage('Setup NodeJS') {
            steps {
                bat 'node -v'
                bat 'npm -v'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'cd server && npm install'
                bat 'cd client && npm install'
                bat 'npm install -g pm2'
            }
        }

        stage('Test') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    bat 'cd server && npm test -- --ci --watchAll=false --passWithNoTests'
                }
            }
        }

        stage('Build Client') {
            steps {
                bat 'cd client && npm run build'
            }
        }

        stage('Start Application with PM2') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                bat 'pm2 delete all || exit 0'
                bat 'pm2 start eco.config.js'
            }
        }
    }

    post {
        always {
            bat 'pm2 save --force'
            echo 'PM2 state saved.'
        }
        success {
            echo 'Build successful and servers running via PM2!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}